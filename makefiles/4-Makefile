CC=gcc
SRC=main.c school.c
OBJ= $(SRC:%.c = %.o)
NAME=school
RM=rm
CFLAGS=-Wall -Werro -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@
clean:
	$(RM) -f *~$(NAME)
oclean:
	$(RM) -f $(OBJ)
fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(OBJ)

re: oclean all
