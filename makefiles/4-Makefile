CC=gcc
CFLAGS= -Wall -Werror -Wextra -pedantic
SRC=main.c school.c
OBJ= $(SRC:%.c = %.o)
NAME=school
RM=rm -f

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $@ $(NAME)
clean:
	$(RM) -f *~$(NAME)
oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all

.PHONY: all clean oclean fclean re
